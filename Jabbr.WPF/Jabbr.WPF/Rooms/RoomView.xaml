<UserControl x:Class="Jabbr.WPF.Rooms.RoomView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:metro="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:users="clr-namespace:Jabbr.WPF.Users"
             xmlns:inf="clr-namespace:Jabbr.WPF.Infrastructure"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:converters="clr-namespace:Jabbr.WPF.Resources.Converters">
    <UserControl.Resources>
        <converters:GroupTypeConverter x:Key="groupTypeConverter" />
        <converters:StringFormatConverter x:Key="formatConverter" />
        <converters:MessageItemsToUserConverter x:Key="messageItemsToUserConverter" />
        <SolidColorBrush Color="{DynamicResource AccentColor3}" x:Key="messageBackground" />
        <inf:AutoRefreshCollectionViewSource Source="{Binding Users}" x:Key="usersSource">
            <inf:AutoRefreshCollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Group" />
            </inf:AutoRefreshCollectionViewSource.GroupDescriptions>
            <inf:AutoRefreshCollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Group" Direction="Ascending" />
                <scm:SortDescription PropertyName="Name" Direction="Ascending" />
            </inf:AutoRefreshCollectionViewSource.SortDescriptions>
        </inf:AutoRefreshCollectionViewSource>
        
        <inf:AutoRefreshCollectionViewSource Source="{Binding Messages}" x:Key="messagesSource">
            <inf:AutoRefreshCollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="MessageGroup" />
            </inf:AutoRefreshCollectionViewSource.GroupDescriptions>
            <inf:AutoRefreshCollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="MessageDateTime" Direction="Ascending" />
            </inf:AutoRefreshCollectionViewSource.SortDescriptions>
        </inf:AutoRefreshCollectionViewSource>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"  />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition MaxWidth="400" MinWidth="200" />
        </Grid.ColumnDefinitions>

        <!-- row 0 -->
        <TextBlock Grid.Column="0" Grid.Row="0" FontSize="32" Text="{Binding RoomName, Converter={StaticResource formatConverter}, ConverterParameter='#{0} Messages'}" />
        <TextBlock Grid.Column="1" Grid.Row="0" FontSize="32" Text="Users" />

        <!-- row 1-->
        <ItemsControl
            ItemsSource="{Binding Source={StaticResource messagesSource}}"
            Grid.Row="1"
            Grid.Column="0">
            <ItemsControl.Template>
                <ControlTemplate TargetType="{x:Type ItemsControl}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                        <ScrollViewer Focusable="false" Padding="{TemplateBinding Padding}">
                            <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </ItemsControl.Template>
            <ItemsControl.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="GroupItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GroupItem">
                                        <StackPanel Margin="7,0,7,7">
                                            <Border Background="{StaticResource messageBackground}">
                                                <ItemsPresenter Margin="5" />
                                            </Border>
                                            <Border Margin="20,0,0,0" HorizontalAlignment="Left">
                                                <Polygon Fill="{StaticResource messageBackground}">
                                                    <Polygon.Points>
                                                        <Point X="0" Y="0" />
                                                        <Point X="0" Y="7" />
                                                        <Point X="9" Y="0" />
                                                    </Polygon.Points>
                                                </Polygon>
                                            </Border>
                                            <users:MessageUserView Grid.Row="1" cal:Bind.Model="{Binding Items, Converter={StaticResource messageItemsToUserConverter}}" />
                                        </StackPanel>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ItemsControl.GroupStyle>
            <!--<ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel VerticalAlignment="Bottom" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>-->
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ContentControl cal:View.Model="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <ItemsControl
            Grid.Row="1"
            Grid.Column="1"
            ItemsSource="{Binding Source={StaticResource usersSource}}">
            <ItemsControl.GroupStyle>
                <GroupStyle>
                    <GroupStyle.ContainerStyle>
                        <Style TargetType="GroupItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="GroupItem">
                                        <Expander IsExpanded="True">
                                            <Expander.Header>
                                                <TextBlock FontSize="18" Text="{Binding Name, Converter={StaticResource groupTypeConverter}}"/>
                                            </Expander.Header>
                                            <ItemsPresenter />
                                        </Expander>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </GroupStyle.ContainerStyle>
                </GroupStyle>
            </ItemsControl.GroupStyle>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <users:UserView Width="75" Height="90" cal:View.Context="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</UserControl>
