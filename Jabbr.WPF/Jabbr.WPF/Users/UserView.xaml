<UserControl x:Class="Jabbr.WPF.Users.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="75" Height="90" Margin="2.5">
    <Border BorderThickness="1" BorderBrush="DarkGray">
        <Border.Background>
            <ImageBrush ImageSource="{Binding Gravatar}" />
        </Border.Background>
        <Border Background="DarkGray" VerticalAlignment="Bottom">
            <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Center" x:Name="Name"/>
        </Border>
    </Border>
</UserControl>
