<UserControl x:Class="Jabbr.WPF.Users.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Margin="2.5" x:Name="uiThis">
    <Border BorderThickness="1" BorderBrush="{DynamicResource AccentColorBrush}">
        <Border.Background>
            <ImageBrush ImageSource="{Binding Gravatar}" />
        </Border.Background>
        <Border Background="{DynamicResource AccentColorBrush}" VerticalAlignment="Bottom">
            <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Center" Text="{Binding Name}" />
        </Border>
    </Border>
</UserControl>
